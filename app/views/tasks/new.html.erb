<h1>タスク新規作成ページ</h1>

<%= form_with(model: @task, local: true) do |f| %>
  <% if status.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% status.errors.full_messages.each do |stu| %>
          <li><%= stu %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '登録' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>